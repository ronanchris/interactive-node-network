{
  "compilerOptions": {
    // Use ES modules
    "module": "ESNext",
    
    // Target Node.js 16+
    "target": "ES2020",
    
    // Enable all strict type checking
    "strict": true,
    
    // Allow default imports from modules
    "esModuleInterop": true,
    
    // Ensure consistent casing in imports
    "forceConsistentCasingInFileNames": true,
    
    // Output directory for compiled files
    "outDir": "./dist",
    
    // Source files root directory
    "rootDir": ".",
    
    // Include Node.js type definitions
    "types": ["node"],
    
    // Use Node.js module resolution
    "moduleResolution": "node",
    
    // Allow importing JSON files
    "resolveJsonModule": true,
    
    // Generate source maps for debugging
    "sourceMap": true,
    
    // Support top-level await
    "target": "ES2022",
    
    // Required for ESM
    "module": "ESNext",
    "moduleResolution": "node"
  },
  "include": [
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true
  }
} 